global
  log /dev/log  local0
  log /dev/log  local1 notice
  stats socket /var/lib/haproxy/stats level admin
  chroot /var/lib/haproxy
  user haproxy
  group haproxy
  daemon

defaults
  log global
  mode  http
  option  httplog
  option  dontlognull
        timeout connect 5000
        timeout client 50000
        timeout server 50000

frontend hafrontend
    bind *:{{load_balancer_port}}
    mode http
    default_backend app-servers

backend app-servers
    mode http
    balance roundrobincle
    option forwardfor
    {% for app_server in groups['apps'] %}
      server {{app_server}} {{app_server}}.{{GUID}}.internal:{{app_server_port}} cookie {{app_server}} check
    {% endfor %}